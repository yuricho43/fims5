@page
@model Fims5.Areas.Identity.Pages.Account.RegisterModel

<div class="col-xs-1 " align="center">
    <div class="text-start text-black" style="max-width:500px">
        <section>
            <form id="account" method="post">
                <h2 class="text-center mb-5">Register a new user</h2>
                <ht />

                <div>
                    <label asp-for="Input.Name" class="form-label" color="black">이름</label>
                    <input asp-for="Input.Name" class="form-control mb-3" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                    <div asp-validation-summary="ModelOnly" class="text-danger" aria-required="true"></div>
                </div>

                <div>
                    <label asp-for="Input.Password" class="form-label">패스워드</label>
                    <input asp-for="Input.Password" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Role" class="form-label">Role</label>
                    <input asp-for="Input.Role" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.EnglishName" class="form-label">영문이름</label>
                    <input asp-for="Input.EnglishName" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.EnglishName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Department" class="form-label">부서</label>
                    <input asp-for="Input.Department" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.Department" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.HangulName" class="form-label">이름</label>
                    <input asp-for="Input.HangulName" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.HangulName" class="text-danger"></span>
                </div>

                <div>
                    <button id="login-submit" typeof="submit" class="w-100btn btn-lg btn-primarymt-4">Register</button>
                </div>

            </form>
        </section>
    </div>
</div>

@{
}
