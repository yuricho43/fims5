@page "/Management/AddUserDialog"

@using RegisterRequestModel = Fims5.Data.Identity.RegisterRequestModel


<TelerikDialog Visible="true" Title="사용자 추가" Width="700px" Class="dialog-background">
    <DialogContent>

        <TelerikForm Model="@NewUserRegisterRequestModel"
                     @ref="@AddUserFormRef"
                     OnValidSubmit="@HandleValidSubmit"
                     OnInvalidSubmit="@HandleInvalidSubmit"
                     Orientation="FormOrientation.Vertical">
            <FormValidation>
                <DataAnnotationsValidator></DataAnnotationsValidator>
            </FormValidation>
 
            <FormItems>
                <FormItem Field="@nameof(RegisterRequestModel.UserName)">
                    <Template>
                        <label for="fname" class="k-label k-form-label">ID*:</label>
                        <TelerikTextBox Id="fname" @bind-Value="@NewUserRegisterRequestModel.UserName"></TelerikTextBox>
                        <TelerikValidationMessage For="@(() => NewUserRegisterRequestModel.UserName)"></TelerikValidationMessage>
                    </Template>
                </FormItem>
                <FormItem Field="@nameof(RegisterRequestModel.Password)">
                    <Template>
                        <label for="pass" class="k-label k-form-label">Password*:</label>
                        <TelerikTextBox Id="pass" @bind-Value="@NewUserRegisterRequestModel.Password" Password="true"></TelerikTextBox>
                        <TelerikValidationMessage For="@(() => NewUserRegisterRequestModel.Password)"></TelerikValidationMessage>
                    </Template>
                </FormItem>
                <FormItem Field="@nameof(RegisterRequestModel.Role)">
                    <Template>
                        <label for="role" class="k-label k-form-label">권한*:</label>
                        <TelerikDropDownList Id="role" Data="@Roles" @bind-Value="NewUserRegisterRequestModel.Role"></TelerikDropDownList>
                    </Template>
                </FormItem>
                <FormItem Field="@nameof(RegisterRequestModel.Email)">
                    <Template>
                        <label for="mail" class="k-label k-form-label">Email*:</label>
                        <TelerikTextBox Id="mail" @bind-Value="@NewUserRegisterRequestModel.Email" InputMode="email" PlaceHolder="example@domain.com"></TelerikTextBox>
                        <TelerikValidationMessage For="@(() => NewUserRegisterRequestModel.Email)"></TelerikValidationMessage>
                    </Template>
                </FormItem>
                <FormItem Field="@nameof(RegisterRequestModel.HangulName)">
                    <Template>
                        <label for="fname" class="k-label k-form-label">이름*:</label>
                        <TelerikTextBox Id="fname" @bind-Value="@NewUserRegisterRequestModel.HangulName"></TelerikTextBox>
                        <TelerikValidationMessage For="@(() => NewUserRegisterRequestModel.HangulName)"></TelerikValidationMessage>
                    </Template>
                </FormItem>
            </FormItems>

            <FormButtons>
                <TelerikButton ButtonType="ButtonType.Submit" ThemeColor="@(ThemeConstants.Button.ThemeColor.Primary)">등록</TelerikButton>
                <TelerikButton ButtonType="ButtonType.Button" OnClick="@OnAddUserDialogCancel">취소</TelerikButton>
           </FormButtons>

        </TelerikForm>

    </DialogContent>

